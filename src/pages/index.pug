            sum: "до 110 000"
          })
          +vacancy-card({
            label: "Продажи",
            title: "Менеджер по продажам услуг",
            sum: "от 80 000"
          })
          +vacancy-card({
            label: "Продажи",
            title: "Менеджер по продажам услуг",
            sum: "от 80 000"
          })
        +e.more
          +e.BUTTON.button(type="button")
            span
            | Все вакансии

    +b.SECTION.s-partners.section
